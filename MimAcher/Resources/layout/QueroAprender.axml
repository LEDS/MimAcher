<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
    <Toolbar
        android:id="@+id/toolbar"
        android:minHeight="?android:attr/actionBarSize"
        android:background="?android:attr/colorPrimary"
        android:theme="@android:style/ThemeOverlay.Material.Dark.ActionBar"
        android:popupTheme="@android:style/ThemeOverlay.Material.Light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:text="O que vocÃª quer aprender?"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/o_que_vc_aprender"
        android:textColor="#A9A9A9"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="4dp"
        android:paddingStart="10dp" />
    <EditText xmlns:p3="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/digite_aprender"
        android:textColor="#A9A9A9"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="20dp"
        android:hint="Digite algo para aprender"
        android:background="#ffffff"
        android:singleLine="true"
        android:lines="1"
        android:layout_below="@+id/o_que_vc_aprender"
        android:textColorHint="#A9A9A9"
        android:layout_height="wrap_content" />
    <View
        android:layout_width="match_parent"
        android:background="#A9A9A9"
        android:layout_height="1dp"
        android:layout_marginLeft="42dp"
        android:layout_marginRight="100dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/digite_aprender"
        android:id="@+id/aprender_line" />
    <Button
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/add_aprender"
        android:backgroundTint="#ffffffff"
        android:drawableTint="#ffb4b4b4"
        android:drawableBottom="@drawable/ic_add_box_white_24dp"
        android:layout_below="@+id/o_que_vc_aprender"
        android:contextClickable="true"
        android:layout_alignEnd="@+id/digite_aprender"
        android:background="#DCDCDC"
        android:backgroundTintMode="screen"
        android:elevation="@dimen/abc_action_bar_subtitle_bottom_margin_material" />
    <Button
        android:text="OK"
        android:textColor="@android:color/black"
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:id="@+id/ok"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:textSize="20dp"
        android:clickable="true"
        android:textStyle="normal"
        android:background="#DCDCDC"
        android:layout_marginTop="500dp" />
</RelativeLayout>